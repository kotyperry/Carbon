{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Carbon",
  "version": "1.0.14",
  "identifier": "com.carbon.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Carbon",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "transparent": true,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 16,
          "y": 20
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "A beautiful project and resource management workspace",
    "longDescription": "Carbon is a beautiful, local-first workspace for managing your projects, tasks, and resources. Features include multiple boards, drag-and-drop cards, labels, priorities, checklists, and bookmarks.",
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1REIzMUFFQzdDNUFEMzQKUldRMHJjWEhyakhiUmI3MVJ2akhGVml2ZmF3TTc0Zmc0MmpxayttOE1TNFk5WDMwdndncXBKU3kK",
      "endpoints": ["https://update.blkdog.dev/carbon/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
